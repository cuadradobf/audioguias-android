<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.fragment.HomeFragment">
        <LinearLayout
            android:id="@+id/horizontalLayout_HomeF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/locationImageView_HomeF"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_location_off_24"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/searchEditText_HomeF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/search_edit_text"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_marginHorizontal="4dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userImageView_HomeF"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAudioGuide_HomeF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toBottomOf="@+id/horizontalLayout_HomeF"
            app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>