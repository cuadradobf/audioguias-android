<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ResetPasswordActivity">
    <Button
        android:id="@+id/backButton_ResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp" />
    <TextView
        android:id="@+id/forgotPasswordTextView_ResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton_ResetPassword"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/sendEmailTextView_ResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/provide_email"
        app:layout_constraintStart_toEndOf="@id/forgotPasswordTextView_ResetPassword"
        app:layout_constraintTop_toBottomOf="@id/backButton_ResetPassword"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/emailEditText_ResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgotPasswordTextView_ResetPassword"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"/>
    <Button
        android:id="@+id/sendButton_ResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailEditText_ResetPassword"/>


</androidx.constraintlayout.widget.ConstraintLayout>