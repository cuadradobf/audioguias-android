<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AudioguideActitivity"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/backButton_AudioGuideActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ATRAS" />

        <TextView
            android:id="@+id/titleTextView_AudioGuideActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Titulo"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/autorTextView_AudioGuideActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            tools:text="Nombre del autor" />

        <ImageView
            android:id="@+id/mainImageView_AudioGuideActivity"
            tools:src="@tools:sample/avatars"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:id="@+id/onlyTextCostTextView_AudioGuideActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: " />

            <TextView
                android:id="@+id/costTextView_AudioGuideActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="coste" />

            <TextView
                android:id="@+id/eurosTextView_AudioGuideActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â‚¬" />

            <Button
                android:id="@+id/buyButton_AudioGuideActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPRAR"
                android:layout_marginStart="24dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/titleDescriptionTextView_AudioGuideActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/descriptionTextView_AudioGuideActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            tools:text="dfaadfad apdofiaj pd asdoifj apsd adoifja of aspd oiafj adfj adpof adfijasdofi jadofij adsofi jadof ajsdfoaijdfapod ija fjadfo " />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>