<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.VerifyActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/verifyAccountTextView_Verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Para poder realizar cambios en el perfil, debes verificar tu email. Pulsa en el botón &quot;VERIFICAR CUENTA&quot; para enviar un email de verificación." />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/verifyAccount_Verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VERIFICAR CUENTA" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/backButton_Verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ATRAS" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>