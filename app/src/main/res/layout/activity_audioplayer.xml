<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AudioplayerActivity"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/backButton_AudioPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ATRAS" />

        <ImageView
            android:id="@+id/mainImageView_AudioPlayer"
            android:layout_width="160dp"
            android:layout_height="160dp"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/titleTextView_AudioPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Titulo"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/autorTextView_AudioPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/favButton_AudioPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAV"
            android:layout_gravity="end"/>

        <ProgressBar
            android:id="@+id/progressBar_AudioPlayer"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/currentTimeTextView_AudioPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                tools:text="6:54" />

            <TextView
                android:id="@+id/totalTimeTextView_AudioPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                tools:text="23:33" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/takeTimeRadioButton_AudioPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="-15s" />

            <RadioButton
                android:id="@+id/playPauseRadioButton_AudioPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/takeTimeRadioButton_AudioPlayer"

                android:text="Play/Pause" />

            <RadioButton
                android:id="@+id/addTimeRadioButton_AudioPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/playPauseRadioButton_AudioPlayer"
                android:text="+15s" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>