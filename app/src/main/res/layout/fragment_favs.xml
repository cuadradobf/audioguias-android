<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.FavsFragment"
    android:orientation="vertical"
    android:fitsSystemWindows="false">

        <EditText
            android:id="@+id/searchEditText_Favs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_edit_text"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1"
            android:background="@drawable/edittext_border"
            android:padding="10dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="16dp"
            android:inputType="text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAudioGuide_Favs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@+id/searchEditText_Favs"
        app:layout_constraintStart_toStartOf="parent"/>

</LinearLayout>